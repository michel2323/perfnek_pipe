      subroutine userchk

      include 'SIZE'
      include 'TSTEP'   ! istep
      include 'PARALLEL' ! np
      include 'CTIMER'  ! tcrsl

c-----------------------------------------------------------------------
!     this must be performed before calling sfd_init and sfd_rst_save
      call checkpoint  ! save/load files for full-restart
      iftimers=.false.
      if(istep>30) then 
        iftimers=.true.
        ifsync=.true.
      endif

      return
      end
